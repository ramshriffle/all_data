<!DOCTYPE html>
<html>
  <head>
    <title>Swiggy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
      :root {
        --main-color: #cbe0b4;
      }
      #header {
        border:1px solid #000000;
        display: flex;
        justify-content: space-between;
        background: #cbe0b4;
        padding: 6px;
        margin: 0px;
      }
      .topnav {
        overflow: hidden;
      }

      .topnav a {
        float: left;
        color: black;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .home-profile_pic{
        text-align: center;
        display: flex;
        align-items: center;
        float: left;
      }
    </style>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_user %>
      <header id="header">
        <div class="topnav">
          <%= link_to "HOME", api_v1_restaurant_dishes_path %>
          <%= link_to "DISHES", api_v1_dishes_path %>
          <%= link_to "RESTAURANT", api_v1_restaurants_path %>
        </div>

        <div class="home-profile_pic">
          <%= link_to api_v1_user_path(current_user) do %>
            <% if current_user.profile_picture.attached? %>
              <%= image_tag(current_user.profile_picture, size: "30x30") %>
            <% else %>
              <%= image_tag("profile_pic.png", size: "30x30") %>
            <% end %>
          <% end %>
        </div>
      </header>
    <% end %>

    <br>

    <%= yield %>
  </body>
</html>
