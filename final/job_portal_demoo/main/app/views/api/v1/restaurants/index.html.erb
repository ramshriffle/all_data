<%= render "api/v1/shared/search", locals: { path: api_v1_restaurants_path, is_show_status: true } %>

<%= button_to "New Restaurant", new_api_v1_restaurant_path, method: :get %>
<br>
<table align="center" style="max-width: 25rem;">
  <thead style="color:red">
    <tr>
      <th>Restaurant Name</th>
      <th>Address</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%=restaurant.restaurant_name %></td>
        <td><%=restaurant.address %></td>
        <td><%=restaurant.status %></td>
        <td><%= button_to "view", api_v1_restaurant_path(restaurant), method: :get %></td>
        <% if restaurant.owner_id == current_user.id %>
          <td><%= button_to "edit", edit_api_v1_restaurant_path(restaurant), method: :get %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div align="center", style="margin: 20px 0px 0px 0px">
  <%= paginate @restaurants %>
</div>
