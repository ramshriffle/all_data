<center><h1>Edit Book Detail</h1>

<%= form_for @movie, :url =>{:action => "update", :id =>@movie} do |form| %>
  <label for="name">Name</label>
   <%= form.text_field :name ,id: "name"%><br><br>
    <label for="release_date">Release Date</label>
    <%= form.date_field :release_date, id: "release_date" %><br><br>
    <label for="poster">Poster</label>
    <%= form.file_field :poster, id: "poster" %><br><br>
    <%= form.submit %><br>
 <% end %>

<%= link_to 'Back', {:action => 'index' } %>
</center>